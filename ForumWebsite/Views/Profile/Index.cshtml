@model ForumWebsite.Models.ViewMoels.ProfileViewModel

<h3>Profile</h3>
<hr />

<form asp-action="Index">
    <table>
        <tr>
            <td colspan="3"><div asp-validation-summary="All"></div></td>
        </tr>
        <tr>
            <td><label asp-for="Birthday"></label></td>
            <td><input asp-for="Birthday" /></td>
            <td><span asp-validation-for="Birthday"></span></td>
        </tr>
        <tr>
            <td><label asp-for="AboutMe"></label></td>
            <td><textarea asp-for="AboutMe" style="resize:none"></textarea></td>
            <td><span asp-validation-for="AboutMe"></span></td>
        </tr>
        <tr>
            <td colspan="3"><input type="submit" value="Update" /></td>
        </tr>
    </table>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
